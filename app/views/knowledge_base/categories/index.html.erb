<div class="categories">
  <h1>Categories</h1>

  <div class="list">
    <% @categories.each do |category| %>
    <div class="category">
      <h2 class="title"><%= link_to category.title, category %></h2>

      <div class="description"><%= simple_format category.description %></div>
    </div>
    <% end %>
  </div>
</div>
